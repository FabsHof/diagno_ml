# =============================================================================
# DiagnoML Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control

# =============================================================================
# GCP Configuration
# =============================================================================
GCP_PROJECT_ID=diagnoml-poc
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-key.json

# BigQuery
BQ_DATASET=diagnoml_warehouse
BQ_LOCATION=EU

# Cloud Storage
GCS_BUCKET=diagnoml-artifacts

# =============================================================================
# OpenClinica EDC
# =============================================================================
OC_BASE_URL=http://openclinica:8080/OpenClinica
OC_PORT=8080
OC_CLIENT_ID=your-client-id
OC_CLIENT_SECRET=your-client-secret
OC_STUDY_OID=S_DIAGNOML

# OpenClinica Database
OC_DB_NAME=openclinica
OC_DB_USER=openclinica
OC_DB_PASSWORD=change-me-in-production
OC_DB_PORT=5433

# =============================================================================
# Prefect
# =============================================================================
PREFECT_API_URL=https://api.prefect.cloud/api/accounts/{account_id}/workspaces/{workspace_id}
PREFECT_API_KEY=your-prefect-api-key

# =============================================================================
# MLflow
# =============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5001
MLFLOW_PORT=5001
MLFLOW_ARTIFACT_ROOT=gs://diagnoml-mlflow-artifacts
MLFLOW_EXPERIMENT_NAME=diagnoml-experiments

# =============================================================================
# Database (PostgreSQL for MLflow backend)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mlflow
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=change-me-in-production

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4

# =============================================================================
# Lab Mock Service
# =============================================================================
LAB_MOCK_PORT=8081
LAB_MOCK_URL=http://lab-mock:8081

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Development Settings
# =============================================================================
# Set to true for local development
DEV_MODE=false
